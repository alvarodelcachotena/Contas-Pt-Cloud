# Contas-PT Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
DATABASE_URL="postgresql://user:password@host:port/database"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"

# =============================================================================
# SESSION & SECURITY (Required)
# =============================================================================
SESSION_SECRET="your-secure-session-secret-minimum-32-characters"
NODE_ENV="development"
PORT="5000"

# =============================================================================
# AI PROCESSING SERVICES (Optional but Recommended)
# =============================================================================
# Google AI (Gemini) - Primary AI processor
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# OpenAI - Fallback AI processor
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# CLOUD STORAGE INTEGRATION (Optional)
# =============================================================================
# Google Drive API
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Dropbox API
DROPBOX_CLIENT_ID="your-dropbox-client-id"
DROPBOX_CLIENT_SECRET="your-dropbox-client-secret"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Next.js specific
NEXT_PUBLIC_APP_URL="http://localhost:5000"

# Enable debug logging (development only)
DEBUG="false"

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# For production deployment, ensure:
# - NODE_ENV=production
# - Secure SESSION_SECRET (generate with: openssl rand -base64 32)
# - HTTPS enabled for NEXT_PUBLIC_APP_URL
# - All API keys properly configured